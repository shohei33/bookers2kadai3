<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>error<br>
    <% @book.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
  <% end %>
  <%= form_for(@book) do |f| %>
    <div class="form-group has-icon">
      <label class="control-label sr-only">Title</label>
      <%= f.text_field :title, class:"form-control book_title", placeholder:"Book Title" %>
      <span class="fa fa-building form-control-icon" aria-hidden="true" ></span>
    </div>
    <div class="form-group has-icon">
      <label class="control-label sr-only">Opinion</label>
      <%= f.text_area :body, class:"form-control book_body", placeholder:"Your opinion about Book" %>
      <span class="fa fa-building form-control-icon" aria-hidden="true" ></span>
    </div>
    <%= f.submit "Edit it", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
  <% end %>
  <%= link_to "Show", book_path(@book), class:"edit_book_#{@book.id}" %>
  |
  <%= link_to "Back", books_path, class:"books" %>
  </div>
</div>
</div>
</section>