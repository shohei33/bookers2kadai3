<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
 <% if @book.errors.any? %>
    <%= @book.errors.count %>error<br>
    <%= @book.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
  <% end %>
  <%= form_with model: @book do |f| %>
    Title
    <div class="form-group has-icon">
      <label class="control-label sr-only">Title</label>
      <%= f.text_field :title, class:"form-control book_title"%>
    </div>
    Opinion
    <div class="form-group has-icon">
      <label class="control-label sr-only">Opinion</label>
      <%= f.text_area :body, class:"form-control book_body"%>
    </div>
    <%= f.submit "Update Book", class:"btn btn-success" %>
  <% end %>
  <%= link_to "Show", book_path(@book), class:"edit_book_#{@book.id}" %>
   |
  <%= link_to "Back", books_path, class:"books" %>
  </div>
</div>
</div>
</section>