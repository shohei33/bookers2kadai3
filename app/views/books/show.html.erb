<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
  <div class="row">
    <%= render 'users/userinfo', {user: @user, book: @book} %>
<div class="col-sm-6">
  <h1>Book Details</h1>
  <table class="table table-striped">
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
      <% if @detail_book.user.id == current_user.id %>
      <th></th>
      <th></th>
      <% end %>
    </tr>
    <tr>
      <td>
        <!-- insert profile_image and link_to user_profile -->
        <%= image_tag @detail_book.user.get_profile_image(100,100) %>
      </td>
      <td><%= @detail_book.title %></td>
      <td><%= @detail_book.body %></td>
      <% if @detail_book.user.id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(@detail_book), class:"edit_book_#{@detail_book.id}" %></td>
      <td><%= link_to "delete", book_path(@detail_book), method: :delete, class:"destroy_book_#{@detail_book.id}" %></td>
      <% end %>
    </tr>
  </table>
  <%= link_to "#{@detail_book.user.name}", user_path(@detail_book.user), class:"user_#{@detail_book.user.id}" %>
</div>
</div>
</div>
</section>