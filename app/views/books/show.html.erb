<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', {user: @user, book: @book} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <th>User</th>
          <th>Title</th>
          <th>Opinion</th>
          <% if @detail_book.user.id == current_user.id %>
            <th></th>
            <th></th>
            <% end %>
        </tr>
        <tr>
          <td>
            <!-- insert profile_image and link_to user_profile -->
            <%= image_tag @detail_book.user.get_profile_image(100,100) %>
          </td>
          <td>
            <%= @detail_book.title %>
          </td>
          <td>
            <%= @detail_book.body %>
          </td>
          <% if @detail_book.user.id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@detail_book), class:"btn btn-sm btn-success edit_book_#{@detail_book.id}" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@detail_book), method: :delete, class:"btn btn-sm btn-danger destroy_book_#{@detail_book.id}" %>
            </td>
            <% end %>
        </tr>
      </table>
      <%= link_to "#{@detail_book.user.name}", user_path(@detail_book.user), class:"user_#{@detail_book.user.id}" %>
    </div>
  </div>
</div>