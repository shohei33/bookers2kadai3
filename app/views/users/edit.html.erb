<section class="sct-color-1 slice">
<div class="container">
<div class="row">
<div class="col-sm-2 col-sm-offset-1">
  <div class="row">
    <% if @user.errors.any? %>
      <%= @user.errors.count %>error<br>
      <%= @user.errors.full_messages.each do |message| %>
        <%= message %><br>
      <% end %>
    <% end %>
    <%= form_with model: @user do |f| %>
    <h1>User info</h1>
      <div class="form-group has-icon">
        <label class="user-name">Name</label>
        <%= f.text_field :name %>

      </div>
      <div class="form-group has-icon">
        Image
        <div class="user-edit-image">




        </div>
        <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
        <%= f.file_field :profile_image, class:"user_image", placeholder:"ProfileImage", class:"user-edit-form" %>
      </div>
      <div class="form-group has-icon">
        <label class="control-label sr-only">Introduction</label>
        <%= f.text_area :introduction, class:"form-control introduction"%>
      </div>
      <%= f.submit "Update User", class:"btn btn-secondary" %>
    <% end %>
  </div>
</div>
</div>
</div>
</section>