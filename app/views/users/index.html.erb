<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
<div class="row">
<%= render 'users/userinfo', {user: @user, book: @book} %>
<div class="col-sm-6">
  <h1>Users</h1>
  <table class="table table-striped">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><% image_tag @user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user), class:"user_#{user.id}" %></td>
    </tr>
    <% end %>
  </table>
</div>
</div>
  </div>
</section>
</div>
</div>
</div>
</section>