<section class="sct-color-1 slice">
  <div class="container">
<div class="row">
  <div class="col-md-3">
    <%= render 'users/userinfo', {user: @user, book: @book} %>
  </div>
<div class="col-md-8 offset-md-1">
  <h1>Users</h1>
  <table class="table">
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user), class:"user_#{user.id}" %></td>
    </tr>
    <% end %>
  </table>
</div>
</div>
  </div>
</section>
</div>
</div>
</div>
</section>